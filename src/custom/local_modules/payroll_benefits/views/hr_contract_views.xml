<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_contract_view_form_inherit_payroll_benefits" model="ir.ui.view">
        <field name="name">hr.contract.view.form.inherit.payroll.benefits</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='salary_info']" position="inside">
                <group>
                    <field name="contract_benefit_type"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
