<odoo>
    <record id="product_template_form_view_inherit_storage_tags" model="ir.ui.view">
        <field name="name">product.template.form.inherit.storage.tags</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <field name="categ_id" position="after">
                <field name="storage_tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
            </field>
        </field>
    </record>

    <record id="product_template_search_view_inherit_storage_tags" model="ir.ui.view">
        <field name="name">product.template.search.inherit.storage.tags</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
             <xpath expr="//filter[@name='consumable']" position="after">
                <separator/>
                <filter string="Has Storage Tags" name="has_storage_tags" domain="[('storage_tag_ids', '!=', False)]"/>
            </xpath>
            <xpath expr="//search" position="inside">
                <group expand="1" string="Group By">
                    <filter string="Storage Tags" name="group_by_storage_tags" context="{'group_by': 'storage_tag_ids'}"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="product_template_kanban_view_inherit_storage_tags" model="ir.ui.view">
        <field name="name">product.template.kanban.inherit.storage.tags</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_kanban_details')]" position="inside">
                 <div class="o_kanban_tags_section">
                    <field name="storage_tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                </div>
            </xpath>
        </field>
    </record>

    <record id="product_template_tree_view_inherit_storage_tags" model="ir.ui.view">
        <field name="name">product.template.tree.inherit.storage.tags</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <field name="uom_id" position="before">
                <field name="storage_tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" optional="show" readonly="0"/>
            </field>
        </field>
    </record>
</odoo>