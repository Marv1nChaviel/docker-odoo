<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_inherit_alert" model="ir.ui.view">
        <field name="name">product.template.form.inherit.alert</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='inventory']" position="inside">
                <group string="Alertas de Stock">
                    <field name="min_stock_threshold"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>