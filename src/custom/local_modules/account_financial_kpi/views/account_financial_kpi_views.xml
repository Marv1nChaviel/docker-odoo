<odoo>
    <record id="view_account_financial_kpi_search" model="ir.ui.view">
        <field name="name">account.financial.kpi.search</field>
        <field name="model">account.financial.kpi</field>
        <field name="arch" type="xml">
            <search string="Financial KPIs">
                <field name="name"/>
                <separator/>
                <filter string="This Year" name="this_year" context="{'date_from': context_today().strftime('%Y-01-01'), 'date_to': context_today().strftime('%Y-12-31')}"/>
                <filter string="This Month" name="this_month" context="{'date_from': context_today().strftime('%Y-%m-01'), 'date_to': (context_today() + relativedelta(months=1, day=1, days=-1)).strftime('%Y-%m-%d')}"/>
                <separator/>
                <filter string="Previous Year" name="prev_year" context="{'date_from': (context_today() - relativedelta(years=1)).strftime('%Y-01-01'), 'date_to': (context_today() - relativedelta(years=1)).strftime('%Y-12-31')}"/>
            </search>
        </field>
    </record>

    <record id="view_account_financial_kpi_form" model="ir.ui.view">
        <field name="name">account.financial.kpi.form</field>
        <field name="model">account.financial.kpi</field>
        <field name="arch" type="xml">
            <form string="Financial KPI">
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="value" readonly="1"/>
                        </group>
                        <group>
                            <field name="threshold_warning"/>
                            <field name="threshold_critical"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Formula">
                            <field name="formula" widget="ace" options="{'mode': 'python'}"/>
                            <p class="text-muted">
                                Use variable names defined in "Variables" tab (e.g. <code>assets</code>).<br/>
                                Or use <code>bal('code')</code> to get account balance.<br/>
                                Example: <code>(bal('101') - bal('201')) / 100</code>
                            </p>
                        </page>
                        <page string="Variables">
                            <field name="variable_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="account_tag_ids" widget="many2many_tags"/>
                                    <field name="account_group_ids" widget="many2many_tags"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_account_financial_kpi_tree" model="ir.ui.view">
        <field name="name">account.financial.kpi.tree</field>
        <field name="model">account.financial.kpi</field>
        <field name="arch" type="xml">
            <tree string="Financial KPIs">
                <field name="name"/>
                <field name="value"/>
                <field name="state" widget="badge" decoration-success="state == 'success'" decoration-warning="state == 'warning'" decoration-danger="state == 'danger'"/>
            </tree>
        </field>
    </record>

    <record id="view_account_financial_kpi_kanban" model="ir.ui.view">
        <field name="name">account.financial.kpi.kanban</field>
        <field name="model">account.financial.kpi</field>
        <field name="arch" type="xml">
             <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="value"/>
                <field name="state"/>
                <field name="description"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click oe_kanban_card">
                            <div class="o_kanban_record_top mb-2">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                </div>
                                <span t-attf-class="badge badge-pill #{record.state.raw_value == 'success' ? 'badge-success' : (record.state.raw_value == 'warning' ? 'badge-warning' : 'badge-danger')}">
                                    <field name="state"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body text-center mt-3 mb-3">
                                <h1 t-attf-class="#{record.state.raw_value == 'success' ? 'text-success' : (record.state.raw_value == 'warning' ? 'text-warning' : 'text-danger')}">
                                    <field name="value"/>
                                </h1>
                            </div>
                            <div class="o_kanban_record_bottom text-muted small">
                                <field name="description"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_account_financial_kpi_dashboard" model="ir.actions.act_window">
        <field name="name">Financial Dashboard</field>
        <field name="res_model">account.financial.kpi</field>
        <field name="view_mode">kanban,form</field>
        <field name="search_view_id" ref="view_account_financial_kpi_search"/>
        <field name="context">{'search_default_this_year': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Financial KPIs defined
            </p>
        </field>
    </record>

    <record id="action_account_financial_kpi_config" model="ir.actions.act_window">
        <field name="name">Financial Indicators</field>
        <field name="res_model">account.financial.kpi</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define your first Financial KPI
            </p>
        </field>
    </record>

    <menuitem id="menu_account_financial_kpi_dashboard"
              name="Financial Dashboard"
              parent="account.account_reports_management_menu"
              action="action_account_financial_kpi_dashboard"
              sequence="0"/>

    <menuitem id="menu_account_financial_kpi_config"
              name="Financial Indicators"
              parent="account.menu_finance_configuration"
              action="action_account_financial_kpi_config"
              sequence="1"/>
</odoo>